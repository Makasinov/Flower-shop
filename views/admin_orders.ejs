<!DOCTYPE html>
<html>

<head>
    <% include head %>
</head>

<body>
    <div class="alert">

        <% for(let i = 0; i < data.length; i++) { %>
        <% if ( data[i]['processed'] ) { %>
        <div class="alert alert-secondary" role="alert">
        <% } else { %>
        <div class="alert alert-primary" role="alert">
            <% } %>
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row">Товар</th>
                        <td>
                            <%= data[i]['product']['quantity'] %> шт
                        </td>
                        <td>
                            <%= data[i]['final_price'] %>р
                        </td>
                        <td><a href="/product/<%= data[i]['product']['id'] %>">
                                ID <%= data[i]['product']['id'] %>
                            </a>
                        </td>
                    </tr>
                    <tr>
                        <th scope="row">Покупатель</th>
                        <td>
                            <%= data[i]['customer']['name'] %>
                        </td>
                        <td>
                            <%= data[i]['customer']['mobile'] %>
                        </td>
                        <td>
                            <%= data[i]['customer']['email'] %>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <% } %>
    </div>
</body>

</html>