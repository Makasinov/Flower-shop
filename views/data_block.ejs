<div class="col-md-4">
    <div class="card mb-4 shadow-sm">
        <div class="content_img" style="text-align: center">
            <img alt="Thumbnail [100%x225]" src="<%= img %>" height="225" data-holder-rendered="true">
        </div>
        <div class="card-body">
            <p class="card-text">
                <%= description %>
            </p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    <button type="button" class="btn btn-sm btn-outline-secondary" 
                    onclick="window.location.href='http://<%= ip %>:3000/product/<%= id %>'"> Посмотреть</button>
                    <button class="btn btn-info btn-lg" type="button">Заказать</button>
                </div>
                <small class="text-muted">
                    <%= price %>р</small>
            </div>
        </div>
    </div>
</div>